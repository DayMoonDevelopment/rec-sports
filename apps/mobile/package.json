  "version": "1.0.0",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "lint": "expo lint",
    "prebuild": "expo prebuild --clean",
    "prebuild:android": "expo prebuild --clean -p android",
    "prebuild:ios": "expo prebuild --clean -p ios",
    "dev:android": "graphql-codegen --config gql-codegen.ts expo prebuild --clean -p android && expo run:android",
    "dev:ios": "graphql-codegen --config gql-codegen.ts && expo prebuild --clean -p ios && expo run:ios",
    "codegen:gql": "graphql-codegen --config gql-codegen.ts",
    "postinstall": "graphql-codegen --config gql-codegen.ts",
    "typecheck": "tsc"
  },
